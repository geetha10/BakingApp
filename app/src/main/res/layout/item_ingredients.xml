<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/ingredient_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ingredient_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ingredient_name_tv" />

    <TextView
        android:id="@+id/ingredient_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredient Name"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/ingredient_checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/ingredient_name_tv"
        app:layout_constraintTop_toTopOf="parent" />
        <!--android:background="#c0c0c0"-->
    <TextView
        android:id="@+id/ingredient_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredient Quantity"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ingredient_name_tv"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>